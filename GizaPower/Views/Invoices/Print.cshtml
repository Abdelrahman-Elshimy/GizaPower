@model GizaPower.Data.Invoice

@{
    ViewData["Title"] = "Print";
}

<h1>Print</h1>

<div id="printableArea">
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Total value
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2" style="margin-bottom: 20px;">
            Invoice Details
        </dt>
        <dd class="col-sm-10" style="margin-bottom: 20px;">
        </dd>

        @foreach (var sub in Model.SubInvoices)
        {
            <dt class="col-sm-2">
                Product
            </dt>
            <dd class="col-sm-10">
                @sub.Product.Name
            </dd>
            <dt class="col-sm-2">
                Quantity
            </dt>
            <dd class="col-sm-10">
                @sub.Quantiy
            </dd>
            <dt class="col-sm-2">
                Value
            </dt>
            <dd class="col-sm-10">
                @sub.Value
            </dd>
        }
    </dl>
</div>
<div>
    <a href="javascript:void(0);" onclick="printPageArea('printableArea')" class="btn btn-info">Print Out</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function printPageArea(areaID) {
            var printContent = document.getElementById(areaID);
            var WinPrint = window.open('', '', 'width=900,height=650');
            WinPrint.document.write(printContent.innerHTML);
            WinPrint.document.close();
            WinPrint.focus();
            WinPrint.print();
        }
    </script>
}
